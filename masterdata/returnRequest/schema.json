{
  "properties": {
    "orderId": {
      "type": "string",
      "required": true
    },
    "refundableAmount": {
      "type": "integer",
      "required": true
    },
    "sequenceNumber": {
      "type": "string",
      "required": true
    },
    "status": { "$ref": "#/$defs/status", "required": true },
    "refundableAmountTotals": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "required": true,
            "enum": ["items", "shipping", "tax"]
          },
          "value": {
            "type": "integer",
            "required": true
          }
        }
      }
    },
    "customerProfileData": {
      "type": "object",
      "required": true,
      "properties": {
        "userId": {
          "type": "string",
          "required": true
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phoneNumber": { "type": "string", "maxLength": 50 }
      }
    },
    "pickupReturnData": {
      "type": "object",
      "required": true,
      "properties": {
        "addressId": {
          "type": "string"
        },
        "address": {
          "type": "string",
          "required": true
        },
        "city": {
          "type": "string",
          "required": true
        },
        "state": {
          "type": "string",
          "required": true
        },
        "country": {
          "type": "string",
          "required": true
        },
        "zipCode": {
          "type": "string",
          "required": true
        },
        "addressType": {
          "type": "string",
          "required": true,
          "enum": ["PICKUP_POINT", "CUSTOMER_ADDRESS"]
        },
        "returnLabel": {
          "type": "string"
        }
      }
    },
    "refundPaymentData": {
      "type": "object",
      "required": true,
      "properties": {
        "refundPaymentMethod": {
          "type": "string",
          "required": true,
          "enum": ["bank", "card", "giftCard", "sameAsPurchase"]
        },
        "iban": {
          "type": ["string", "null"]
        },
        "accountHolderName": {
          "type": ["string", "null"]
        }
      }
    },
    "items": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "orderItemIndex": { "type": "integer", "required": true },
          "id": { "type": "string", "required": true },
          "name": { "type": "string", "required": true },
          "sellingPrice": { "type": "integer", "required": true },
          "tax": { "type": "integer", "required": true },
          "quantity": { "type": "integer", "required": true },
          "imageUrl": { "type": "string", "required": true },
          "unitMultiplier": { "type": "number", "required": true },
          "sellerId": { "type": "string", "required": true },
          "sellerName": { "type": "string", "required": true },
          "productId": { "type": "string", "required": true },
          "refId": { "type": "string", "required": true },
          "returnReason": {
            "type": "object",
            "required": true,
            "properties": {
              "reason": {
                "type": "string",
                "required": true
              },
              "otherReason": {
                "type": ["string", "null"]
              }
            }
          },
          "condition": {
            "type": "string",
            "required": true,
            "enum": [
              "newWithBox",
              "newWithoutBox",
              "usedWithBox",
              "usedWithoutBox"
            ]
          }
        }
      }
    },
    "dateSubmitted": { "type": "string", "format": "date-time" },
    "refundData": {
      "type": ["object", "null"],
      "required": true,
      "properties": {
        "invoiceNumber": { "type": "string", "required": true },
        "invoiceValue": { "type": "integer", "required": true },
        "refundedItemsValue": { "type": "integer", "required": true },
        "refundedShippingValue": { "type": "integer" },
        "giftCard": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "required": true
            },
            "redemptionCode": {
              "type": "string",
              "required": true
            }
          }
        },
        "items": {
          "type": "array",
          "required": true,
          "items": {
            "type": "object",
            "properties": {
              "orderItemIndex": { "type": "integer", "required": true },
              "id": { "type": "string", "required": true },
              "price": { "type": "integer", "required": true },
              "quantity": { "type": "integer", "required": true },
              "restockFee": { "type": "integer", "required": true }
            }
          }
        }
      }
    },
    "refundStatusData": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "status": { "$ref": "#/$defs/status", "required": true },
          "submittedBy": { "type": "string", "required": true },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "required": true
          },
          "comments": {
            "type": "array",
            "required": true,
            "items": {
              "type": "object",
              "properties": {
                "comment": { "type": "string", "required": true },
                "createdAt": {
                  "type": "string",
                  "format": "date-time",
                  "required": true
                },
                "submittedBy": { "type": "string", "required": true },
                "visibleForCustomer": { "type": "boolean", "required": true }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "status": {
      "type": "string",
      "enum": [
        "new",
        "processing",
        "pickedUpFromClient",
        "pendingVerification",
        "packageVerified",
        "amountRefunded",
        "denied"
      ]
    }
  },
  "v-cache": false,
  "v-default-fields": [
    "id",
    "createdIn",
    "orderId",
    "sequenceNumber",
    "dateSubmitted",
    "status"
  ],
  "v-indexed": [
    "id",
    "createdIn",
    "orderId",
    "customerProfileData",
    "status",
    "sequenceNumber"
  ],
  "v-immediate-indexing": true
}
